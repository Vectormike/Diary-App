<%include partials/header.ejs%>
<div class="ui center container segment">
    <h2 class="ui huge header">Edit <%=blog.title%></h2>
    <div class="ui">
            <form class="ui form" action="/index/<%= blog._id %>?_method=PUT" method="POST">
                <div class="ui field labeled input">
                    <div class="ui label">
                        Title
                    </div>
                    <input type="text" name="blog[title]" value="<%=blog.title%>">
                </div><br>
                <div class="ui field labeled input">
                    <div class="ui label">
                        Image url
                    </div>
                    <input type="text" name="blog[image]" value="<%=blog.image%>">
                </div><br>
                <div class="ui field labeled input">
                    <textarea name="blog[saySomething]" cols="15" rows="4"><%= blog.saySomething%></textarea>    
                </div>
                <div class="ui field">
                    <button class="ui button" type="submit">Submit</button>
                </div> 
            </form>
    </div>
</div>

<%include partials/footer.ejs%>